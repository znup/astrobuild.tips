---
const {
  content: { title, pubDate, image, tags },
} = Astro.props;
---

<section class="dark:bg-slate-700">
  <div class="mx-auto max-w-screen-2xl px-4 py-16 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:h-screen lg:grid-cols-2">
      <div class="relative z-10">
        <div class="relative h-64 sm:h-80 lg:h-full">
          <img
            alt={title}
            src={image}
            class="absolute inset-0 h-full w-full object-cover"
          />
        </div> 
      </div>

      <div class="relative flex items-center bg-gray-300">
        <span
          class="hidden lg:absolute lg:inset-y-0 lg:-start-16 lg:block lg:w-16 lg:bg-gray-300"
        ></span>

        <div class="p-8 sm:p-16 lg:p-24">
          <h2 class="text-2xl font-bold sm:text-3xl">
            {title}
          </h2>

          <p class="mt-4 text-gray-600">
            <span class="flex flex-col sm:gap-y-2 md:items-center md:gap-y-0 md:divide-x md:divide-textColor">
              <time datetime={pubDate}>{pubDate}</time>
              {
                tags.map((tag:string[]) => (
                  <span
                    class="whitespace-nowrap rounded-full bg-purple-100 px-2.5 py-1 mt-1 text-xs text-purple-600 leading-none dark:bg-purple-600 dark:text-purple-100"
                  >
                    {tag}
                  </span>
                ))
              }
            </span>
          </p>
          <slot />
        </div>
      </div>
    </div>
  </div>
</section>